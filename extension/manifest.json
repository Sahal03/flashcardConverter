{
  "manifest_version": 3,
  "name": "NotebookLM Flashcards Export",
  "version": "1.0.0",
  "description": "Export NotebookLM Flashcards to CSV or Anki Package",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*",
    "https://*.usercontent.goog/*"
  ],
    "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}